        {% if cpu is defined %}
        "cpu": {{ cpu }},
        {% endif %}
        {% if memory is defined %}
        "memory": {{ memory }},
        {% endif %}
        {% if storage is defined %}
        "storage": {{ storage }},
        {% endif %}
        {% include 'air/coordinates.j2' %}

        {% if uefi is defined or tpm is defined %}
        "features": {
              {% if uefi is defined %}
              "uefi": {{ uefi }},
              {% else %}
              "uefi": false,
              {% endif %}
              {% if tpm is defined %}
              "tpm": {{ tpm }}
              {% else %}
              "tpm": false
              {% endif %}
        },
        {% endif %}
        {% if pxehost is defined %}
        "pxehost": {{ pxehost }},
        {% endif %}
        {% if secureboot is defined %}
        "secureboot": {{ secureboot }},
        {% endif %}
        {% if oob is defined %}
        "oob": {{ oob }},
        {% endif %}
        {% if emulation_type is defined %}
        "emulation_type": "{{ emulation_type }}",
        {% endif %}
        {% if os is defined and os|length > 0%}
        "os": "{{ os }}"
        {% else %}
        "os": "generic/ubuntu2204"
        {% endif %}
